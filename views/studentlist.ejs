<%- include('./base/header.ejs')%>
<div class="container">
    <div class="row">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Roll No</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Father Name</th>
                    <th>Adhar Card</th>
                    <th>Mobile No</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <% students.forEach((student)=>{%>
            <tr>
                <td>
                    <%= student.rollNo %>
                </td>
                <td>
                    <%= student.firstName %>
                </td>
                <td>
                    <%= student.lastName %>
                </td>
                <td>
                    <%= student.fatherName %>
                </td>
                <td>
                    <%= student.adharCardNo %>
                </td>
                <td>
                    <%= student.mobileNo %>
                </td>
                <td><a href="/edit/student/page/<%= student._id%>"
                        class="btn btn-primary w-40">Edit</a>
                    <a href="/delete/student/<%= student._id%>"
                        class="btn btn-danger w-40">Delete</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
</div>
<%- include('./base/footer.ejs')%>